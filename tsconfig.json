{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    // âœ… LESS STRICT - Better for development
    "strict": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "exactOptionalPropertyTypes": false,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
